<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="reportMovement">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="movement">
                <t t-call="web.basic_layout">
                    <div class="page">
                        <h2>Movement Report</h2>
                        <p><strong>Account Number:</strong> <t t-esc="movement.transactionId"/></p>
                        <p><strong>Balance:</strong> <t t-esc="movement.ammount"/> Euro</p>
                        <p><strong>Creation Date:</strong> <t t-esc="movement.transactionDate"/></p>
                        <p><strong>Product ID</strong> <t t-esc="movement.typeOfMoney"/></p>
                        <p><strong>Credit Card</strong> <t t-esc="movement.creditCard"/></p>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
