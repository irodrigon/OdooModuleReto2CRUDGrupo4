<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id= "reportLoan">
        <t t-call="web.html_container">
           <t t-foreach="docs" t-as="loan">
                <t t-call="web.basic_layout">
                    <div class="page">
                        <h2>Loan Report</h2>
                        <p><strong>Loan ID:</strong><t t-esc="loan. loan_id"/></p>
                        <p><strong>Starting Date:</strong><t t-esc="loan.start_date"/></p>
                        <p><strong>Ending Date:</strong><t t-esc="loan.end_date"/></p>
                        <p><strong>Total Amount:</strong><t t-esc="loan.amount"/></p>
                        <p><strong>Remaining Amount:</strong><t t-esc="loan.remaining_amount"/></p>
                        <p><strong>Interest Rate:</strong><t t-esc="loan.interest"/></p>
                        <p><strong>Period:</strong><t t-esc="loan.period"/></p>
                    </div>
                </t>
           </t>
        </t>

    </template>
</odoo>