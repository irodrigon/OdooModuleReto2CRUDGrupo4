    <record id="customer_access_creditcard" model="ir.model.access">
        <field name="name">Credit Card Customer access</field>
        <field name="model_id" ref="model_grupo4_creditcard"/>
        <field name="group_id" ref="customer_group"/>
   </record>


</odoo>