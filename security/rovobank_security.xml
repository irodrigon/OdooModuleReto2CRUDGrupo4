<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Administrators group -->
   <record id="admin_group" model="res.groups">
       <field name="name">Rovobank Administrator</field>
   </record>

    <!-- Customers group -->
    <record id="customer_group" model="res.groups">
       <field name="name">Rovobank Customers</field>
   </record>

    <!-- Group's permissions -->

    <record id="administrator_access_admin" model="ir.model.access">
        <field name="name">Admin Admin access</field>
        <field name="model_id" ref="model_grupo4_admin"/>
        <field name="group_id" ref="admin_group"/>
    </record>

    <record id="administrator_access_product" model="ir.model.access">
        <field name="name">Product Admin access</field>
        <field name="model_id" ref="model_grupo4_product"/>
